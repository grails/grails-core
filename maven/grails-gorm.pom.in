<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.grails</groupId>
        <artifactId>grails</artifactId>
        <version>@grails.version@</version>
        <relativePath>grails.pom</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>grails-gorm</artifactId>
    <packaging>jar</packaging>
    <name>GORM</name>
    <description>ORM library based on Groovy and Hibernate.</description>
    <url>http://www.grails.org</url>

    <dependencies>
<!-- External Dependencies -->
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.4</version>
        </dependency>

        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-core</artifactId>
            <version>3.3.1.GA</version>
            <exclusions>
                <exclusion>
                    <groupId>net.sf.ehcache</groupId>
                    <artifactId>ehcache</artifactId>
                </exclusion>

                <exclusion>
                    <groupId>xml-apis</groupId>
                    <artifactId>xml-apis</artifactId>
                </exclusion>

                <!-- We have JCL-over-SLF4J instead. -->
                <exclusion>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!--
          The next two are only needed if you use Hibernate annotations
          in your project.
        -->
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-annotations</artifactId>
            <version>3.4.0.ga</version>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-commons-annotations</artifactId>
            <version>3.4.0.ga</version>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
            <version>1.5.6</version>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring</artifactId>
            <version>3.0-M4</version>
            <exclusions>
                <!-- We have JCL-over-SLF4J instead. -->
                <exclusion>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

<!-- Grails Dependencies -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>grails-core</artifactId>
            <version>${project.version}</version>
        </dependency>

<!-- Runtime Dependencies -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.5.6</version>
            <scope>runtime</scope>
        </dependency>

        <!--
          You need this in your project if you want to use EJB3 annotations
          on Hibernate domain classes.
        -->
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>ejb3-persistence</artifactId>
            <version>1.0.2.GA</version>
            <optional>true</optional>
        </dependency>

        <!--
          Two options for the Hibernate second-level cache. If you don't
          enable the cache, you don't need either of them. Grails defaults
          to OSCache.
        -->
        <dependency>
            <groupId>net.sf.ehcache</groupId>
            <artifactId>echache</artifactId>
            <version>1.3.0</version>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>opensymphony</groupId>
            <artifactId>oscache</artifactId>
            <version>2.4</version>
            <optional>true</optional>
        </dependency>

<!-- Test Dependencies -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
